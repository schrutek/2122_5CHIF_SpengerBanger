@model IEnumerable<Shop>

<h1>
    Shops
</h1>

<p>
    <button asp-action="Add" asp-controller="Shop">Add new Shop...</button>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Catch-Phrase</th>
            <th>BS</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Shop item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Location</td>
            <td>@item.CatchPhrase</td>
            <td>@item.Bs</td>
            <td>
                <a asp-action="Details" asp-controller="Shop">Details</a>
                <a asp-action="Edit" asp-controller="Shop">Edit</a>
                <a asp-action="Delete" asp-controller="Shop">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>